{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-5 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title uppercase">{{ 'change_password.title'|trans|desc('Change my password') }}</h1>
            </div>
            <div class="panel-body">
                <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST">
                    {{ form_widget(form) }}
                    <div>
                        <input class="btn btn-primary btn-block" type="submit" value="Continue" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
