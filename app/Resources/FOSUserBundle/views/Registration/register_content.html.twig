{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-5 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title uppercase">{{ 'register.title'|trans|desc('Create free account') }}</h1>
            </div>
            <div class="panel-body">
                <div class="text-center">
                    <a class="btn btn-info" href="{{ path('hwi_oauth_service_redirect', {'service': 'github' }) }}" alt="Sign in with Github">Sign in with Github</a>
                </div>
                <hr />
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                    {{ form_widget(form) }}
                    <div>
                        <input class="btn btn-primary btn-block" type="submit" value="Continue" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
