{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title uppercase"><i class="fa fa-lock"></i> {{ 'login.title'|trans|desc('Sign In') }}</h1>
                </div>
                <div class="panel-body">
                    <div class="text-center">
                        <a class="btn btn-info" href="{{ path('hwi_oauth_service_redirect', {'service': 'github' }) }}" alt="Sign in with Github">Sign in with Github</a>
                    </div>
                    <hr />
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <p>{{ 'login.text'|trans|desc('Please log in or register to continue.') }}</p>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="form-group">
                            <label for="username" class="required sr-only">Email</label>
                            <input class="form-control" type="text" autocomplete="off" id="username" name="_username" value="{{ last_username }}" placeholder="Email" required/>
                        </div>
                        <div class="form-group">
                            <label for="password" class="required sr-only">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                            <input class="form-control" type="password" autocomplete="off" id="password" name="_password" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" required/>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block uppercase">
                            {{ 'login.submit'|trans|desc('Continue') }}
                        </button>
                    </form>
                    <p class="text-center margin-top-10">
                        <a href="{{ path('fos_user_resetting_request') }}">
                            {{ 'login.forgot_password'|trans|desc('Forgot your password?') }}
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}
