{% extends '::base.html.twig' %}

{% block meta_title %}{{ 'doc.git_auth.meta.title'|trans|desc('autodeploy.io - Git repository authentification with Capistrano') }}{% endblock %}
{% block meta_description %}{{ 'doc.git_auth.meta.description'|trans|desc('Configure Git repository public key') }}{% endblock %}
{% block og_description %}{{ 'doc.git_auth.meta.description'|trans|desc('Configure Git repository public key') }}{% endblock %}

{% block content %}
    <div class="row">
        {% include 'AppBundle:Page:_summary.html.twig' %}
        <div class="col-md-9">
            <div class="homepage-panel">
                <div class="panel panel-default">
                    <div class="panel-heading uppercase">{{ 'doc.git_auth.title.main'|trans|desc('Git repository authentification') }}</div>
                    <div class="panel-body">
                        <h1 class="page-header">{{ 'doc.git_auth.title.step'|trans|desc('Configure SSH key on GIT repository') }}</h1>

                        <p>
                            {{ 'doc.git_auth.text.text1'|trans|desc('Your project is now created. Now we need to configure your SSH deployment key on your Git repository.') }}
                        </p>
                        <p>
                            {{ 'doc.git_auth.text.text2'|trans|desc('Go on your project, copy the SSH public key and add key in the list of your authorized.') }}
                        </p>

                        <h1 class="page-header margin-top-30">{{ 'doc.git_auth.title.github'|trans|desc('Configure with GitHub') }}</h1>

                        <p>
                            {{ 'doc.git_auth.text.text3'|trans|desc('Go in "Deploy Keys" section of your GitHub project settings and click on "Add deploy key".') }}
                        </p>
                        <p>
                            {{ 'doc.git_auth.text.text4'|trans|desc('Paste the deployment key generated by autodeploy.io, and submit the form.') }}
                        </p>
                        <p>
                            {{ 'doc.git_auth.text.text5'|trans|desc('Return on your project on autodeploy.io, and just click on "Check Authentification". Easy !') }}
                        </p>

                        <div class="text-right margin-top-30">
                            <a href="{{ path('app_documentations') }}" class="btn btn-info pull-left">{{ 'doc.action.previous'|trans|desc('Previous') }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
